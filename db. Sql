// Importa o pacote mysql2
const mysql = require('mysql2');

// Importa o pacote dotenv para carregar as variáveis de ambiente
require('dotenv').config();

// Cria um "pool" de conexões com o banco de dados
// Usar um pool é uma boa prática pois gerencia múltiplas conexões de forma eficiente
const pool = mysql.createPool({
  host: process.env.DB_HOST,
  user: process.env.DB_USER,
  password: process.env.DB_PASSWORD,
  database: process.env.DB_NAME,
  waitForConnections: true,
  connectionLimit: 10,
  queueLimit: 0
});

// Exporta a pool de conexões como uma promise para podermos usar async/await
module.exports = pool.promise();
